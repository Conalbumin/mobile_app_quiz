<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_mainScroll_ScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#edf2fa"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- main layout -->
    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="ScrollViewSize">

        <RelativeLayout
            android:id="@+id/head_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- cover image -->
            <ImageView
                android:id="@+id/id_cover_image"
                android:layout_width="match_parent"
                android:layout_height="263dp"
                android:background="@drawable/profile_background"
                android:scaleType="centerCrop"
                tools:ignore="ContentDescription" />

            <!-- Profile image -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/id_profile_image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="160dp"
                android:elevation="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/profile"
                tools:ignore="UnusedAttribute" />

            <TextView
                android:id="@+id/id_fullName_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_profile_image"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Name here"
                android:textColor="#5f5f5f"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/foot_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/head_layout">


            <!-- Button at the end of the page -->
            <Button
                android:id="@+id/reset_password_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:text="Reset" />

            <Button
                android:id="@+id/logout_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="Logout" />
        </RelativeLayout>

    </RelativeLayout>
</ScrollView>
